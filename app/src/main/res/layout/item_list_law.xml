<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
    android:id="@+id/item_list_law"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_item_function"

    android:layout_margin="8dp"
    >
    <ImageView
        android:id="@+id/img_item_list_law"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/tv_law_name"
        android:textSize="15sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_item_list_law"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_law_content"
        android:layout_width="0dp"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="4dp"
        android:textColor="#DC1414"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/img_item_list_law"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_law_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>