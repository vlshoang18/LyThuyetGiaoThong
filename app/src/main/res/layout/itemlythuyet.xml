<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemlt"
    android:layout_marginTop="25dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/border_item_function"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_item_lythuyet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/tv_item_lythuyet"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_item_lythuyet"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_ct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem Lý Thuyết"
        android:textColor="#89189C"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_lythuyet"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_lythuyet"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>