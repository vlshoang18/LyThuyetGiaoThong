<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="137dp"
    android:id="@+id/item_type_learn"
    android:background="@drawable/border_item_function"
    app:backgroundTint="#353434"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="6dp">
    <ImageView
        android:id="@+id/img_item_learn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_item_learn"
        android:paddingBottom="4dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_item_learn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="italic|bold"
        android:gravity="center"
        android:textColor="#656363"
        />

</androidx.constraintlayout.widget.ConstraintLayout>